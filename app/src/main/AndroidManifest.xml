<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infusion.jirareconciler">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ReconciliationListActivity"
            android:label="@string/reconciliations"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ReconciliationListActivity" />
        </activity>
        <activity
            android:name=".ReconciliationActivity"
            android:label="@string/reconciliation"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ReconciliationListActivity" />
        </activity>
        <activity
            android:name=".CaptureActivity"
            android:label="@string/reconciliation"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ReconciliationListActivity" />
        </activity>

        <provider
            android:name="com.infusion.jirareconciler.cards.IssueCardsFileProvider"
            android:authorities="com.infusion.jirareconciler.cards.provider"
            android:exported="true" />
    </application>

</manifest>
